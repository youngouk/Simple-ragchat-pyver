# Simple RAG Chat 환경변수 설정

# 기본 설정
NODE_ENV=development
PORT=3000

# Google API 설정 (필수)
GOOGLE_API_KEY=your_google_api_key_here

# Multi-LLM API 키들 (선택사항)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant 벡터 데이터베이스 설정
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION=documents

# Reranker API 키들 (선택사항)
JINA_API_KEY=your_jina_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# AWS 설정 (관리자 시스템용)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# DynamoDB 설정 (로깅용)
DYNAMODB_TABLE_NAME=rag-chat-logs
DYNAMODB_REGION=us-east-1

# 알림 설정
NOTIFICATION_EMAIL_FROM=admin@example.com
NOTIFICATION_EMAIL_RECIPIENTS=admin@example.com,manager@example.com

# CloudWatch 모니터링 (선택사항)
AWS_CLOUDWATCH_ENABLED=false

# 보안 설정
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# 모니터링 설정
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000
ALERT_THRESHOLD_RESPONSE_TIME=5000
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_MEMORY_USAGE=0.8

# 개발 모드 설정
DEBUG=false
LOG_LEVEL=info
